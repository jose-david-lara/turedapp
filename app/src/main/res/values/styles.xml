<resources>

    <!-- Base application theme. -->

    <style name="AppThemeInit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorInitBack</item>
        <item name="colorPrimaryDark">@color/colorInitBack</item>
        <item name="colorAccent">@color/colorLoginBackBody</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorInitBack</item>
        <item name="colorPrimaryDark">@color/colorLoginButtonBody</item>
        <item name="colorAccent">@color/colorInitBack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
