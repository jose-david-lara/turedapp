<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.frame.LastReportFrameActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollLayoutReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:background="@color/colorInitBack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:background="@color/colorInitBack"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ly_one"
                android:background="@color/colorInitBack">


                <Button
                    android:id="@+id/buttonReportThreeLastDay"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_purp"
                    android:onClick="onClick"
                    android:text="@string/text_button_uno_dias_pasados"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonReportDayActul"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_purp"
                    android:onClick="onClick"
                    android:text="@string/text_button_dia_actual"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/ly_one"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ly_one"
                android:background="@color/colorInitBack"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logoOperTransReport"
                    android:layout_width="160sp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/text_logo_init"
                    android:src="@drawable/img_default" />


                <!--<Button
                    android:id="@+id/buttonBuscarReport"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_below="@+id/logoOperTransReport"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_purp"
                    android:onClick="onClick"
                    android:text="@string/text_button_buscar"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ly_two"
                android:layout_marginTop="20sp"
                android:background="@color/colorInitBack"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textFechaRangos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:background="@drawable/border"
                    android:id="@+id/textSaldoTotalReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                  <ScrollView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                      <HorizontalScrollView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <TableLayout
                              android:id="@+id/TablaReport"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">


                          </TableLayout>


                      </HorizontalScrollView>

                  </ScrollView>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
