                        android:text="@string/text_wallet"
                        android:textColor="#ffff"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </TableRow>


                <LinearLayout
                    android:id="@+id/ly_one_buy_t"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
