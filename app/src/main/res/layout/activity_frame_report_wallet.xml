<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.frame.WalletReportFrameActivity">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollLayoutWallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp"
        android:background="@color/colorInitBack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorInitBack"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_one_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorInitBack"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/capFechaInicialWallet"
                    android:layout_width="180sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableRight="@drawable/ic_action_cap_fecha"
                    android:hint="@string/text_cap_fecha_inicial"
                    android:inputType="date"
                    android:maxLines="1"
                    android:onClick="onClick"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"
                    android:textColor="@color/colorInitBack"
                    android:textColorHint="@color/colorInitBack"
                    android:focusable="false"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/capFechaFinalWallet"
                    android:layout_width="180sp"
                    android:layout_height="40sp"
                    android:layout_below="@+id/capFechaInicialWallet"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableRight="@drawable/ic_action_cap_fecha"
                    android:hint="@string/text_cap_fecha_final"
                    android:inputType="date"
                    android:maxLines="1"
                    android:onClick="onClick"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"
                    android:textColor="@color/colorInitBack"
                    android:textColorHint="@color/colorInitBack"
                    android:focusable="false"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonBuscarReportWallet"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_below="@+id/capFechaFinalWallet"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_purp"
                    android:onClick="onClick"
                    android:text="@string/text_button_buscar"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />

            </LinearLayout>


