<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConsultSaldoActivity">

    <RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_menu" />
    </RelativeLayout>

    <View
        android:id="@+id/view1SolictSaldo"
        android:layout_below="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorInitBack" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50sp"
            android:background="@color/colorInitBack">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ly_three_buy"
                android:background="@color/colorInitBack">

                <TextView
                    android:id="@+id/textBodySolictProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:text="@string/text_seleccionar_producto_solict_recarga"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerViewSolictSaldo"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"/>

                <ImageView
                    android:id="@+id/imgOperadorSolictSaldo"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/RecyclerViewSolictSaldo"
                    android:layout_width="120sp"
                    android:layout_gravity="center"
                    android:layout_height="120sp"
                    android:layout_toRightOf="@+id/tvComisionSolictSaldo"/>

                <EditText
                    android:id="@+id/capSaldoSolictSaldo"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/imgOperadorSolictSaldo"
                    android:background="@drawable/edittext_rounded"
                    android:hint="@string/text_cap_saldo_recargar"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:inputType="number"
                    android:textColor="@color/colorInitBack"
                    android:textColorHint="@color/colorInitBack"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"/>



            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/ly_three_buy"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <Button
                    android:id="@+id/buttonAceptarSolictSaldo"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_rosado"
                    android:bottomLeftRadius="7dp"
                    android:bottomRightRadius="7dp"
                    android:onClick="onClick"
                    android:radius="0.1dp"
                    android:text="@string/text_boton_aceptar_cap_saldo_recargar"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp"
                    android:topLeftRadius="7dp"
                    android:topRightRadius="7dp" />

                <Button
                    android:id="@+id/buttonCancelarSolictSaldo"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_rosado"
                    android:bottomLeftRadius="7dp"
                    android:bottomRightRadius="7dp"
                    android:onClick="onClick"
                    android:radius="0.1dp"
                    android:text="@string/text_boton_cancelar_cap_saldo_recargar"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp"
                    android:topLeftRadius="7dp"
                    android:topRightRadius="7dp" />

            </LinearLayout>


        </RelativeLayout>



</RelativeLayout>