<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReportSaleSearchRecargaActivity"
    android:background="@color/colorInitBack">

    <RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_pag_producto_recarga" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorInitBack" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollLayout"
        android:layout_below="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ly_one"
            android:layout_marginTop="10dp"
            android:background="@color/colorInitBack">


            <EditText
                android:id="@+id/capFechaInicial"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:layout_gravity="left"
                android:layout_marginTop="30sp"
                android:background="@drawable/edittext_rounded"
                android:drawableRight="@drawable/ic_action_cap_fecha"
                android:hint="@string/text_cap_fecha_inicial"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:onClick="onClick"
                android:textColor="@color/colorInitBack"
                android:textColorHint="@color/colorInitBack"
                android:inputType="date"
                android:textSize="15sp"
                android:maxLines="1"
                android:focusable="false"
                android:singleLine="true"
                android:drawableEnd="@drawable/ic_action_cap_fecha"
                android:autofillHints=""
                tools:ignore="RtlHardcoded" />



            <EditText
                android:id="@+id/capFechaFinal"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:layout_gravity="left"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_rounded"
                android:drawableRight="@drawable/ic_action_cap_fecha"
                android:hint="@string/text_cap_fecha_final"
                android:inputType="date"
                android:maxLines="1"
                android:onClick="onClick"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:layout_below="@+id/capFechaInicial"
                android:textColor="@color/colorInitBack"
                android:textColorHint="@color/colorInitBack"
                android:focusable="false"
                android:textSize="15sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ly_one"
            android:layout_alignParentTop="true"
            android:id="@+id/ly_two"
            android:layout_below="@+id/ly_one"
            android:background="@color/colorInitBack">

            <ImageView
                android:id="@+id/logoOperTransReport"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_gravity="right"
                android:contentDescription="@string/text_logo_init"
                android:src="@drawable/img_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ly_body_two"
            android:layout_below="@+id/ly_two"
            android:background="@color/colorInitBack">

            <EditText
                android:id="@+id/capNumText"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_rounded"
                android:hint="@string/text_cap_num_text_search"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/colorInitBack"
                android:textColorHint="@color/colorInitBack"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"/>

        <Button
            android:id="@+id/buttonBuscarReport"
            android:layout_width="180sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/capNumText"
            android:background="@drawable/button_purp"
            android:onClick="onClick"
            android:text="@string/text_button_buscar"
            android:textAllCaps="false"
            android:textColor="@color/ic_launcher_background"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ly_three"
            android:layout_below="@+id/ly_body_two"
            android:background="@color/colorInitBack">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewSearchRecarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttonBuscarReport"
                android:gravity="center"
                android:layout_marginTop="15sp"/>

        </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
