<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background_vertical_sesion_purple"
    tools:context=".activity.LoginActivity">



    <!--<RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_login" />
    </RelativeLayout>-->

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorInitBack" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollLayout"
        android:layout_below="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/body_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/capUser"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60sp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableRight="@drawable/ic_action_cap_user"
                    android:hint="@string/text_cap_user_init"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:textColor="@color/colorInitBack"
                    android:textColorHint="@color/colorInitBack"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/capPass"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableRight="@drawable/ic_action_cap_pass"
                    android:hint="@string/text_cap_pass_init"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:inputType="textPassword"
                    android:textColor="@color/colorInitBack"
                    android:textColorHint="@color/colorInitBack"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_rosado"
                    android:onClick="onClick"
                    android:text="@string/text_enter_init"
                    android:bottomLeftRadius="7dp"
                    android:bottomRightRadius="7dp"
                    android:radius="0.1dp"
                    android:topLeftRadius="7dp"
                    android:topRightRadius="7dp"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonContact"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_purp"
                    android:onClick="onClick"
                    android:text="@string/text_contact_info"
                    android:bottomLeftRadius="7dp"
                    android:bottomRightRadius="7dp"
                    android:radius="0.1dp"
                    android:topLeftRadius="7dp"
                    android:topRightRadius="7dp"
                    android:textAllCaps="false"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="15sp" />


            </LinearLayout>

        <LinearLayout
            android:id="@+id/body_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_two"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/name_develop"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/ic_launcher_background"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_develop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold|italic"
                android:text="@string/name_develop"
                android:textSize="15dp"
                android:textColor="@color/ic_launcher_background"
                android:gravity="center" />
            <TextView
                android:id="@+id/text_develop_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold|italic"
                android:layout_below="@id/text_develop"
                android:text="@string/name_develop_web"
                android:textSize="15dp"
                android:textColor="@color/ic_launcher_background"
                android:gravity="center" />
        </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>